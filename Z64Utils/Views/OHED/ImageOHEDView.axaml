<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Z64Utils_Avalonia"
    xmlns:v="using:Z64Utils_Avalonia"
    xmlns:c="using:Z64Utils_Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Z64Utils_Avalonia.ImageOHEDView"
    x:DataType="vm:ImageOHEDViewModel"
>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="{Binding InfoText}" />
        <Panel>
            <c:CheckPatternControl CheckerSize="10" />
            <Panel Name="ImageWrapperPanel">
                <Image Name="Image" Source="{Binding Image}" RenderOptions.BitmapInterpolationMode="None" />
            </Panel>
        </Panel>
    </DockPanel>
</UserControl>