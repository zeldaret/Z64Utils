<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Z64Utils.Views.OHED.HexViewerControl"
>
    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Name="HeaderTextBlock" FontFamily="{StaticResource MonospacedFont}" />
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <TextBlock Name="ContentTextBlock" FontFamily="{StaticResource MonospacedFont}" />
            </ScrollViewer>
        </DockPanel>
    </ScrollViewer>
</UserControl>