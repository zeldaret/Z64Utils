<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Z64Utils.ViewModels"
    xmlns:c="using:Z64Utils_Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Z64Utils_Avalonia.PrimColorDListSCPSCCView"
    x:DataType="vm:PrimColorDListSCPSCCViewModel"
>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <NumericUpDown Value="{Binding MValue}" Minimum="0" Maximum="255" FormatString="0" />
            <TextBlock VerticalAlignment="Center" Margin="5">m</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <NumericUpDown Value="{Binding LodFracValue}" Minimum="0" Maximum="255" FormatString="0" />
            <TextBlock VerticalAlignment="Center" Margin="5">lod frac</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <ColorPicker Color="{Binding Color}" />
        </StackPanel>
    </StackPanel>
</UserControl>