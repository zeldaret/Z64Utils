        </ContentControl>
        <ContentControl Grid.Row="1" Grid.Column="0" DataContext="{Binding Segments[1]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="2" Grid.Column="0" DataContext="{Binding Segments[2]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="3" Grid.Column="0" DataContext="{Binding Segments[3]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="4" Grid.Column="0" DataContext="{Binding Segments[4]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="5" Grid.Column="0" DataContext="{Binding Segments[5]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="6" Grid.Column="0" DataContext="{Binding Segments[6]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="7" Grid.Column="0" DataContext="{Binding Segments[7]}">
            <v:SegmentConfigControl />
        </ContentControl>

        <ContentControl Grid.Row="0" Grid.Column="1" DataContext="{Binding Segments[8]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="1" Grid.Column="1" DataContext="{Binding Segments[9]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="2" Grid.Column="1" DataContext="{Binding Segments[10]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="3" Grid.Column="1" DataContext="{Binding Segments[11]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="4" Grid.Column="1" DataContext="{Binding Segments[12]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="5" Grid.Column="1" DataContext="{Binding Segments[13]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="6" Grid.Column="1" DataContext="{Binding Segments[14]}">
            <v:SegmentConfigControl />
        </ContentControl>
        <ContentControl Grid.Row="7" Grid.Column="1" DataContext="{Binding Segments[15]}">
            <v:SegmentConfigControl />
        </ContentControl>
    </Grid>
</Window>