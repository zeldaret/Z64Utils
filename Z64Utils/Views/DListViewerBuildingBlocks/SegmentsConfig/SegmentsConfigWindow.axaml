<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Z64Utils.ViewModels"
    xmlns:v="using:Z64Utils_Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Z64Utils_Avalonia.SegmentsConfigWindow"
    x:DataType="vm:SegmentsConfigWindowViewModel"
    Title="Segments"
    SizeToContent="WidthAndHeight"
>
    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto, Auto,Auto,Auto,Auto">
        <ContentControl Grid.Row="0" Grid.Column="0" DataContext="{Binding Segments[0]}">
