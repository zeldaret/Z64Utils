<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Z64Utils_Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Z64Utils_Avalonia.SegmentConfigControl"
    x:DataType="vm:SegmentConfigControlViewModel"
>
    <StackPanel Orientation="Horizontal" Margin="5">
        <TextBlock Text="{Binding SegmentNumber}" MinWidth="20" TextAlignment="Right"
            VerticalAlignment="Center" />
        <TextBlock Text=":" VerticalAlignment="Center" />
        <Button Command="{Binding EditCommand}" Padding="20,5" Margin="10,0">Edit</Button>
        <TextBlock Text="{Binding Description}" MinWidth="200" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>